<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <fragment
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/map"
        tools:context=".views.activities.MapRoutingActivity"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        />
    <ng.max.slideview.SlideView
        android:id="@+id/slideViewStart"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        app:buttonBackgroundColor="@android:color/transparent"
        app:buttonImage="@drawable/ic_action_arrow"
        app:slideBackgroundColor="@color/colorAccent"
        app:slideText="@string/slide_text"
        app:slideTextColor="@android:color/white"
        android:layout_alignParentBottom="true"
        android:layout_margin="20dp"
        android:visibility="visible"
        />
    <ng.max.slideview.SlideView
        android:id="@+id/slideViewStop"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        app:buttonBackgroundColor="@android:color/transparent"
        app:buttonImage="@drawable/ic_action_arrow"
        app:slideBackgroundColor="@color/colorAccent"
        app:slideText="@string/slide_text_stop"
        app:slideTextColor="@android:color/white"
        android:layout_alignParentBottom="true"
        android:layout_margin="20dp"
        android:visibility="gone"
        app:reverseSlide="true"
        />

</RelativeLayout>